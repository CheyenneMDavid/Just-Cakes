{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "ms-python.black-formatter",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/workspace/Just-Cakes/myenv/bin/black",
  "python.formatting.blackArgs": ["--line-length=79"],
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.linter": "ruff",
  "python.linting.ruffArgs": ["--max-line-length=79"],
  "python.linting.ruffPath": "/workspace/Just-Cakes/myenv/bin/ruff",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.github": true,
    "**/.gitp*": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/.vscode": true,
    "**/core.Microsoft*": true,
    "**/core.mongo*": true,
    "**/core.python*": true,
    "**/CVS": true
  },
  "workbench.colorTheme": "Default High Contrast",
  "terminal.integrated.gpuAcceleration": "auto",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": [
    "blogpost",
    "Cloudinary",
    "socialaccount",
    "Templating",
    "wght"
  ],
  "cSpell.ignoreWords": [
    "autodocstring",
    "charliermarsh",
    "dbaeumer",
    "debugpy",
    "esbenp",
    "eventyret",
    "formulahendry",
    "keymap",
    "kohler",
    "njpwerner",
    "rudge",
    "stackoverflow",
    "toolsai",
    "yzhang"
  ]
}
